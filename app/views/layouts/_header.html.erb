<div style="position: relative">
  <% if current_page?(mobile_path) || current_page?(mobile_search_path) %>
      <div style="position: absolute; top: 10px; right: 20px; float:right; display: inline-block">

        <%= simple_form_for :search, url: mobile_search_path, html: { class: 'form-search' }, method: :post do |f| %>
            <%= f.input_field :inquiry, label: false, placeholder: 'Tytuł, Autor...' %>
            <%= f.button :submit, 'Szukaj' %>
        <% end %>
      </div>
  <% else %>
      <div style="position: absolute; top: 10px; right: 20px; float:right; display: inline-block">

        <%= simple_form_for :search, url: table_search_path, html: { class: 'form-search' }, method: :post do |f| %>
            <%= f.input_field :inquiry, label: false, placeholder: 'Tytuł, Autor...' %>
            <%= f.button :submit, 'Szukaj' %>
        <% end %>
      </div>
  <% end %>

  <div style="position: absolute; bottom: 5px; right: 20px; float:right; display: inline; background-color: white; border-radius: 5px; -webkit-border-radius: 5px;
          -moz-border-radius: 5px; border: solid black 1px">

    <p style="display: table-cell; vertical-align: middle;padding-left: 5px">Widoki:</p>

    <%= link_to '<i class="fa fa-th-list fa-2x"></i>'.html_safe, root_path, style: 'display: table-cell; vertical-align: middle; padding-left: 3px; padding-right: 3px' %>
    <%= link_to '<i class="fa fa-th fa-2x"></i>'.html_safe, mobile_path, style: 'display: table-cell; vertical-align: middle; padding-right: 5px' %>

  </div>

  <% if current_page?(mobile_path) %>
    <%= link_to image_tag('https://s3.eu-central-1.amazonaws.com/akraapp/layout/library_scaled.jpg', alt: 'Logo main', style: 'width: 100%'), mobile_path(per_page: params[:per_page]) %>
  <% elsif current_page?(root_path) %>
      <%= link_to image_tag('https://s3.eu-central-1.amazonaws.com/akraapp/layout/library_scaled.jpg', alt: 'Logo main', style: 'width: 100%'), root_path(per_page: params[:per_page]) %>
  <% else %>
      <%= link_to image_tag('https://s3.eu-central-1.amazonaws.com/akraapp/layout/library_scaled.jpg', alt: 'Logo main', style: 'width: 100%'), root_path(per_page: params[:per_page]) %>
  <% end %>
</div>