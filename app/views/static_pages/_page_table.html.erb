<div style='margin-left: 20px'>
  <%= ajax_links :section_id => "page" do %>
      <%= paginate @books, :theme => 'twitter-bootstrap-3', :window => 2 %>
  <% end %>
</div>

<div id="links">
  <table class="table table-hover table-responsive table-bordered">


    <tr>
      <th>Okładka</th>
      <th>Tytuł</th>
      <th>Autorzy</th>
      <th>Stan</th>
    </tr>

    <%= ajax_loadzone do %>
        <% @books.each do |book| %>
            <%= simple_form_for book do |f| %>
            <tr>
              <td><a href="<%= book.cover.url %>" title="<%= book.title %>" data-gallery>
                <img src="<%= book.cover.url(:thumb) %>" alt="<%= book.title %>" style="margin-left: 10px">
              </a>
              </td>
              <td><em><%= book.title %></em></td>
              <td><%= book.author %></td>

              <td><%= f.input :state, as: :select, collection: ['brak', 'przeczytana','do przeczytania','nie interesuje mnie'], label: false %></td>

              <%= f.button :submit %>

            </tr>

            <% end %>
        <% end %>
    <% end %>
  </table>

</div>

<div style='margin-left: 20px'>
    <%= ajax_links :section_id => "page" do %>
    <%= paginate @books, :theme => 'twitter-bootstrap-3', :window => 2 %>
    <% end %>
</div>

