<div style='margin-left: 20px; display: inline-block'>
      <%= paginate @books, :theme => 'twitter-bootstrap-3', :window => 2 %>
</div>
    <div id="links">
      <table class="table table-hover table-responsive table-bordered">

        <tr>
          <th>Okładka</th>
          <th>Tytuł</th>
          <th>Autorzy</th>
          <th>Stan</th>
        </tr>

        <%= simple_form_for :books, method: :patch, url: { action: :update, controller: 'books' } do |f| %>

                <% @books.each do |book| %>
                    <%= render 'fields_books_form', book: book, f: f %>
                <% end %>

          </table>
        </div>
        <div style="float: right; margin-right: 20px; display: inline-block">
          <%= f.button :submit, 'Zapisz' %>
        </div>

        <% end %>
<div style='margin-left: 20px;  position: relative; top: -15px; display: inline-block'>
      <%= paginate @books, :theme => 'twitter-bootstrap-3', :window => 2 %>
</div>